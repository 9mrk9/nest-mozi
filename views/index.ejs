<!DOCTYPE html>
<html lang="hu">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB"
      crossorigin="anonymous"
    />
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI"
      crossorigin="anonymous"
    ></script>
    <title>Mozi Foglalás</title>
  </head>
  <body
    class="d-flex min-vh-100 justify-content-center align-items-center flex-column gap-4 p-4"
  >
    <% if(typeof rewritePath !== 'undefined') { %>
      <script>
        window.history.replaceState({}, '', '<%= rewritePath %>');
      </script>
    <% } %>
    <h1 class="text-center mb-4">Mozi Foglalás</h1>
    <form
      class="container mx-auto shadow-lg p-4 card"
      action="/booking"
      method="post"
    >
      <div class="form-group mb-2">
        <label for="movie">Film címe</label>
        <% if (typeof errors !== 'undefined') { %>
          <% if (errors.movie) { %>
            <div class="alert alert-danger text-center mt-2" role="alert"><%= errors.movie %></div>
          <% } %>
        <% } %>
        <input
          type="text"
          class="form-control"
          name="movie"
          placeholder="A sötét lovag"
        />
      </div>
      <div class="form-group my-2">
        <label for="name">Az ön neve</label>
        <% if (typeof errors !== 'undefined') { %>
          <% if (errors.name) { %>
            <div class="alert alert-danger text-center mt-2" role="alert"><%= errors.name %></div>
          <% } %>
        <% } %>
        <input
          type="text"
          class="form-control"
          name="name"
          placeholder="Erkel Ferenc"
        />
      </div>
      <div class="form-group my-2">
        <label for="email">Az ön e-mail címe</label>
        <% if (typeof errors !== 'undefined') { %>
          <% if (errors.email) { %>
            <div class="alert alert-danger text-center mt-2" role="alert"><%= errors.email %></div>
          <% } %>
        <% } %>
        <input
          type="text"
          class="form-control"
          name="email"
          placeholder="erkel.ferenc@example.com"
        />
      </div>
      <div class="form-date my-2">
        <label class="form-date" for="date">Lefoglalni kívánt időpont</label>
        <% if (typeof errors !== 'undefined') { %>
          <% if (errors.date) { %>
            <div class="alert alert-danger text-center mt-2" role="alert"><%= errors.date %></div>
          <% } %>
        <% } %>
        <input type="datetime-local" class="form-control" name="date" />
      </div>
      <div class="form-group my-2">
        <label for="peopleCount">Foglalásra érkezők száma</label>
        <% if (typeof errors !== 'undefined') { %>
          <% if (errors.peopleCount) { %>
            <div class="alert alert-danger text-center mt-2" role="alert"><%= errors.peopleCount %></div>
          <% } %>
        <% } %>
        <input
          type="number"
          class="form-control"
          name="peopleCount"
          placeholder="1 és 10 közötti szám"
        />
      </div>
      <% if (typeof message !== 'undefined') { %>
        <div class="alert alert-danger text-center mt-2" role="alert"><%= message %></div>
      <% } %>
      <button
        type="submit"
        class="btn btn-primary d-block mx-auto mt-2 mt-2 py-2 px-4"
      >
        Foglalás
      </button>
    </form>
  </body>
</html>
